<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fenvpedi"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.carta.dx.cartadigital.MenuDigiital7">

    <TextView
        android:id="@+id/mostrarped"
        android:layout_width="700dp"
        android:layout_height="350dp"
        android:layout_above="@+id/cronometro"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@android:dimen/notification_large_icon_width"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="35sp"
        android:textStyle="normal|bold" />

    <ImageButton
        android:id="@+id/enviar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/btenviar"
        android:layout_marginEnd="14dp"
        android:layout_above="@+id/cronometro"
        android:layout_alignParentEnd="true" />

    <Chronometer
        android:id="@+id/cronometro"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:textSize="50dp"
        android:layout_marginStart="37dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/mostrarped" />

</RelativeLayout>
