<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fentrad"
    android:columnCount="4"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:rowCount="4"
    tools:context="com.carta.dx.cartadigital.MenuDigiital3">

    <ImageButton
        android:id="@+id/papasFrancesa"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_row="1"
        android:background="@drawable/papasf" />

    <ImageButton
        android:id="@+id/croquetasboton"
        android:layout_width="200dp"
        android:layout_height="200dp"

        android:layout_alignTop="@+id/papasFrancesa"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_gravity="fill_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_row="1"
        android:layout_toEndOf="@+id/papasFrancesa"
        android:background="@drawable/croquetas" />

    <ImageButton
        android:id="@+id/patacones"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@+id/textView7"
        android:layout_column="2"
        android:layout_columnSpan="1"
        android:layout_gravity="fill_horizontal"
        android:layout_marginRight="10dp"
        android:layout_row="1"
        android:layout_toStartOf="@+id/imagenProducto"
        android:background="@drawable/pattacon" />

    <ImageButton
        android:id="@+id/imagenProducto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"

        android:layout_centerVertical="true"
        android:layout_column="3"
        android:layout_columnSpan="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="1"
        android:background="@drawable/arepas" />

    <TextView
        android:id="@+id/papas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_above="@+id/papasFrancesa"
        android:layout_alignParentStart="true"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0"
        android:text="PAPAS F."
        android:textColor="#040404"
        android:textIsSelectable="true"
        android:textSize="30dp"
        android:textStyle="bold"
        android:typeface="sans"
        android:visibility="visible" />

    <TextView
        android:id="@+id/croquetas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/papasFrancesa"

        android:layout_alignEnd="@+id/croquetasboton"

        android:layout_alignStart="@+id/croquetasboton"
        android:layout_alignTop="@+id/papas"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0"
        android:text="CROQUETAS DE  YUCA"
        android:textColor="#040404"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/patacones"

        android:layout_alignEnd="@+id/patacones"
        android:layout_column="2"
        android:layout_columnSpan="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0"
        android:text="PATACONES"
        android:textColor="#040404"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_alignTop="@+id/textView3"
        android:layout_column="3"
        android:layout_columnSpan="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0"
        android:text="MINI AREPAS"
        android:textColor="#060606"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/precio1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"

        android:layout_column="2"
        android:layout_columnSpan="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="2"
        android:text="$ 6.000"
        android:textColor="#040404"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/patacones"

        android:layout_below="@+id/patacones"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_row="3"
        android:text="$ 5.000"
        android:textColor="#060606"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/croquetasboton"

        android:layout_below="@+id/croquetasboton"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="2"
        android:text="$ 5.000"
        android:textColor="#040404"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignEnd="@+id/imagenProducto"
        android:layout_column="2"
        android:layout_columnSpan="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="3"
        android:text="$ 5.000"
        android:textColor="#060606"
        android:textSize="40dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/precio1"
        android:background="@drawable/backk" />


</RelativeLayout>
