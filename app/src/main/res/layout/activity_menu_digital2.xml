<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fini"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.carta.dx.cartadigital.MenuDigital2">

    <ImageButton
        android:id="@+id/entradas"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/bebidas"
        android:layout_marginLeft="10dp"
        android:background="@drawable/btentradas" />

    <ImageButton
        android:id="@+id/platoFuerte"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/entradas"
        android:background="@drawable/btplatof" />

    <ImageButton
        android:id="@+id/bebidas"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btbebida" />

    <ImageButton
        android:id="@+id/postres"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignBottom="@+id/Cuenta"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btpostre" />

    <ImageButton
        android:id="@+id/pedido"
        android:layout_width="200dp"
        android:layout_height="230dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/bebidas"
        android:background="@drawable/btsupedido"
        android:contentDescription="pedido" />

    <ImageButton
        android:id="@+id/Cuenta"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/pedido"
        android:background="@drawable/sucuenta" />

</RelativeLayout>
